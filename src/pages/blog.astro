---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import BlogCard from "../components/BlogCard.astro";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const formattedPosts = sortedPosts.map((post) => ({
    title: post.data.title,
    description: post.data.description,
    date: post.data.pubDate.toLocaleDateString("en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
    }),
    author: post.data.author,
    url: `/blog/${post.id}`,
}));
---

<Layout
    title="Game Dev Blog"
    description="Read our latest thoughts on game development, tech education, and the journey of a father and son building games together."
>
    <div class="blog-page">
        <header class="page-header">
            <div class="container">
                <span class="badge">Insights</span>
                <h1>The <span class="highlight">Blog</span></h1>
                <p>
                    Thoughts on game development, tech education, and the joy of
                    creating together.
                </p>
            </div>
        </header>

        <main class="container">
            <div class="blog-list">
                {formattedPosts.map((post) => <BlogCard {...post} />)}
            </div>
        </main>
    </div>
</Layout>

<style>
    .blog-page {
        padding-bottom: 8rem;
    }

    .page-header {
        padding: 6rem 0 4rem;
        background: var(--color-white);
        border-bottom: 3px solid var(--color-navy);
        margin-bottom: 4rem;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .badge {
        display: inline-block;
        background: var(--color-navy);
        color: var(--color-white);
        padding: 0.4rem 1rem;
        border-radius: var(--radius-sm);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .highlight {
        color: var(--color-red);
        background: linear-gradient(
            180deg,
            transparent 70%,
            var(--color-yellow) 70%
        );
    }

    p {
        font-size: 1.25rem;
        max-width: 600px;
        color: var(--color-text);
    }

    .blog-list {
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
