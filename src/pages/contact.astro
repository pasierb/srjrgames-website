---
import Layout from "../layouts/Layout.astro";

var email = "michal@srjrgames.com";
var twitch = "https://www.twitch.tv/srjrgames";
var youtube = "https://www.youtube.com/@SrJrGames";
---

<Layout>
    <div class="contact-page">
        <header class="page-header">
            <div class="container">
                <span class="badge">Get in Touch</span>
                <h1>Let's <span class="highlight">Connect</span></h1>
                <p>
                    Have a question about our games, or want to share your own
                    game dev journey with your kids? We'd love to hear from you!
                </p>
            </div>
        </header>

        <main class="container">
            <div class="contact-grid">
                <div class="contact-info">
                    <div class="info-card">
                        <h3>Email Us</h3>
                        <a href="mailto:{email}" class="email-link">{email}</a>
                    </div>

                    <div class="info-card">
                        <h3>Follow Our Journey</h3>
                        <div class="social-links">
                            <a
                                href={twitch}
                                target="_blank"
                                class="social-btn twitch"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M21 2H3v16h5v4l4-4h5l4-4V2zm-10 9V7m5 4V7"
                                    ></path></svg
                                >
                                Twitch
                            </a>
                            <a
                                href={youtube}
                                target="_blank"
                                class="social-btn youtube"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.42a2.78 2.78 0 0 0-1.94 2C1 8.14 1 12 1 12s0 3.86.42 5.58a2.78 2.78 0 0 0 1.94 2c1.71.42 8.6.42 8.6.42s6.88 0 8.6-.42a2.78 2.78 0 0 0 1.94-2C23 15.86 23 12 23 12s0-3.86-.42-5.58z"
                                    ></path><polygon
                                        points="9.75 15.02 15.5 12 9.75 8.98 9.75 15.02"
                                    ></polygon></svg
                                >
                                YouTube
                            </a>
                        </div>
                    </div>
                </div>

                <div class="contact-form-container">
                    <form class="contact-form">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="Your Name"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="your@email.com"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea
                                id="message"
                                name="message"
                                rows="5"
                                placeholder="What's on your mind?"
                                required></textarea>
                        </div>
                        <button type="submit" class="submit-btn"
                            >Send Message</button
                        >
                    </form>
                </div>
            </div>
        </main>
    </div>
</Layout>

<style>
    .contact-page {
        padding-bottom: 8rem;
    }

    .page-header {
        padding: 6rem 0 4rem;
        background: var(--color-white);
        border-bottom: 3px solid var(--color-navy);
        margin-bottom: 4rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .badge {
        display: inline-block;
        background: var(--color-navy);
        color: var(--color-white);
        padding: 0.4rem 1rem;
        border-radius: var(--radius-sm);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .highlight {
        color: var(--color-red);
        background: linear-gradient(
            180deg,
            transparent 70%,
            var(--color-yellow) 70%
        );
    }

    p {
        font-size: 1.25rem;
        max-width: 600px;
        color: var(--color-text);
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 0.8fr 1.2fr;
        gap: 4rem;
        align-items: start;
    }

    .info-card {
        background: var(--color-white);
        padding: 2rem;
        border-radius: var(--radius-md);
        border: 3px solid var(--color-navy);
        box-shadow: 6px 6px 0 var(--color-navy);
        margin-bottom: 2rem;
    }

    .info-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .email-link {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--color-red);
        text-decoration: underline;
    }

    .social-links {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .social-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.8rem 1.5rem;
        border-radius: var(--radius-sm);
        font-weight: 800;
        font-family: var(--font-accent);
        border: 3px solid var(--color-navy);
        transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .social-btn.twitch {
        background: var(--color-white);
        color: var(--color-navy);
        box-shadow: 4px 4px 0 var(--color-navy);
    }

    .social-btn.youtube {
        background: var(--color-white);
        color: var(--color-navy);
        box-shadow: 4px 4px 0 var(--color-navy);
    }

    .social-btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: 6px 6px 0 var(--color-navy);
    }

    .contact-form {
        background: var(--color-white);
        padding: 3rem;
        border-radius: var(--radius-lg);
        border: 3px solid var(--color-navy);
        box-shadow: 10px 10px 0 var(--color-navy);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        font-weight: 800;
        margin-bottom: 0.5rem;
        font-family: var(--font-accent);
        color: var(--color-navy);
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 1rem;
        border-radius: var(--radius-sm);
        border: 3px solid var(--color-navy);
        font-family: var(--font-primary);
        font-size: 1rem;
        background-color: var(--color-bg);
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--color-red);
        box-shadow: 0 0 0 3px rgba(255, 77, 77, 0.1);
    }

    .submit-btn {
        width: 100%;
        padding: 1.25rem;
        border-radius: var(--radius-md);
        background-color: var(--color-yellow);
        color: var(--color-navy);
        font-weight: 800;
        font-family: var(--font-accent);
        font-size: 1.1rem;
        border: 3px solid var(--color-navy);
        box-shadow: 6px 6px 0 var(--color-navy);
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .submit-btn:hover {
        transform: translate(-3px, -3px);
        box-shadow: 9px 9px 0 var(--color-navy);
    }

    @media (max-width: 968px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }

        .page-header h1 {
            font-size: 2.5rem;
        }

        .contact-form {
            padding: 2rem;
        }
    }
</style>
