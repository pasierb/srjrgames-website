---
import Navigation from "../components/Navigation.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Sr. Jr. Games</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;800&family=Lexend:wght@400;600;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Navigation />
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--color-navy: #1a2a44;
		--color-navy-dark: #0f1a2a;
		--color-yellow: #ffd93d;
		--color-red: #ff4d4d;
		--color-white: #ffffff;
		--color-bg: #f8f9fa;
		--color-text: #2d3436;

		--font-primary: "Outfit", sans-serif;
		--font-accent: "Lexend", sans-serif;

		--radius-sm: 0.5rem;
		--radius-md: 1rem;
		--radius-lg: 2rem;

		--shadow-subtle:
			0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
		--shadow-hover:
			0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);

		--paper-texture: url("/paper-texture.png");
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: var(--font-primary);
		background-color: var(--color-bg);
		color: var(--color-text);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body::before {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: var(--paper-texture);
		background-repeat: repeat;
		opacity: 0.03;
		pointer-events: none;
		z-index: 9999;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: var(--font-accent);
		color: var(--color-navy);
		font-weight: 800;
		margin-top: 0;
	}

	a {
		color: inherit;
		text-decoration: none;
		transition: all 0.2s ease;
	}

	* {
		box-sizing: border-box;
	}
</style>
