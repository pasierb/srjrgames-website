---
import type { ImageMetadata } from "astro";
import { Image, getImage } from "astro:assets";

interface Props {
    title: string;
    description: string;
    image: ImageMetadata;
    url: string;
    status: string;
    id: string;
    tags?: string[];
}

const { title, description, image, url, status, id, tags = [] } = Astro.props;
---

<div class="project-card">
    <div class="image-container">
        <Image src={image} alt={title} />
    </div>
    <div class="content">
        <div class="header-row">
            <div class="tags">
                {tags.map((tag) => <span class="tag">{tag}</span>)}
            </div>
            <span class="status-badge">{status}</span>
        </div>
        <h3>{title}</h3>
        <p>{description}</p>
        <a href={`/projects/${id}`} class="btn-project">
            View Project
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M5 12h14m-7-7 7 7-7 7"></path></svg
            >
        </a>
    </div>
</div>

<style>
    .project-card {
        background: var(--color-white);
        border-radius: var(--radius-lg);
        border: 3px solid var(--color-navy);
        box-shadow: 8px 8px 0 var(--color-navy);
        overflow: hidden;
        transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .project-card:hover {
        transform: translate(-4px, -4px);
        box-shadow: 12px 12px 0 var(--color-navy);
    }

    .image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-bottom: 3px solid var(--color-navy);
        background-color: var(--color-bg);
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .project-card:hover .image-container img {
        transform: scale(1.05);
    }

    .content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .status-badge {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.2rem 0.5rem;
        background: var(--color-yellow);
        color: var(--color-navy);
        border: 2px solid var(--color-navy);
        border-radius: var(--radius-sm);
        white-space: nowrap;
    }

    .tag {
        background: var(--color-bg);
        color: var(--color-navy);
        padding: 0.2rem 0.6rem;
        border-radius: var(--radius-sm);
        font-size: 0.8rem;
        font-weight: 600;
        border: 1px solid var(--color-navy);
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
    }

    p {
        font-size: 1rem;
        line-height: 1.5;
        color: var(--color-text);
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .btn-project {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 800;
        color: var(--color-red);
        font-family: var(--font-accent);
        transition: gap 0.2s ease;
    }

    .btn-project:hover {
        gap: 0.75rem;
    }
    @media (max-width: 480px) {
        .content {
            padding: 1.25rem;
        }

        h3 {
            font-size: 1.35rem;
        }

        .status-badge {
            font-size: 0.7rem;
        }
    }
</style>
