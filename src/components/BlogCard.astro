---
interface Props {
    title: string;
    description: string;
    date: string;
    url: string;
    author: string;
}

const { title, description, date, url, author } = Astro.props;
---

<article class="blog-card">
    <div class="content">
        <div class="meta">
            <span class="date">{date}</span>
            <span class="dot">â€¢</span>
            <span class="author">{author}</span>
        </div>
        <h3><a href={url}>{title}</a></h3>
        <p>{description}</p>
        <a href={url} class="read-more">
            Read Article
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M5 12h14m-7-7 7 7-7 7"></path></svg
            >
        </a>
    </div>
</article>

<style>
    .blog-card {
        background: var(--color-white);
        border-radius: var(--radius-md);
        border: 3px solid var(--color-navy);
        box-shadow: 6px 6px 0 var(--color-navy);
        padding: 2rem;
        transition: all 0.2s ease;
        display: flex;
        flex-direction: column;
    }

    .blog-card:hover {
        transform: translate(-3px, -3px);
        box-shadow: 9px 9px 0 var(--color-navy);
    }

    .meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: var(--color-text);
        opacity: 0.7;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .dot {
        color: var(--color-red);
    }

    h3 {
        font-size: 1.75rem;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    h3 a:hover {
        color: var(--color-red);
    }

    p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: var(--color-text);
        margin-bottom: 2rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .read-more {
        margin-top: auto;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 800;
        color: var(--color-red);
        font-family: var(--font-accent);
        transition: gap 0.2s ease;
    }

    .read-more:hover {
        gap: 0.75rem;
    }
    @media (max-width: 480px) {
        .blog-card {
            padding: 1.5rem;
        }

        h3 {
            font-size: 1.4rem;
        }

        p {
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }
    }
</style>
