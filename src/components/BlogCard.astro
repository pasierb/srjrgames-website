---
import { Image } from "astro:assets";

interface Props {
    title: string;
    description: string;
    date: string;
    url: string;
    author: string;
    image?: any;
}

const { title, description, date, url, author, image } = Astro.props;
---

<article class="blog-card">
    {
        image && (
            <a href={url} class="card-image">
                <Image
                    src={image}
                    alt={title}
                    width={800}
                    height={400}
                    quality="high"
                />
            </a>
        )
    }
    <div class="content">
        <div class="meta">
            <span class="date">{date}</span>
            <span class="dot">â€¢</span>
            <span class="author">{author}</span>
        </div>
        <h3><a href={url}>{title}</a></h3>
        <p>{description}</p>
        <a href={url} class="read-more">
            Read Article
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M5 12h14m-7-7 7 7-7 7"></path></svg
            >
        </a>
    </div>
</article>

<style>
    .blog-card {
        background: var(--color-white);
        border-radius: var(--radius-lg);
        border: 3px solid var(--color-navy);
        box-shadow: 8px 8px 0 var(--color-navy);
        transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        height: 100%;
    }

    .blog-card:hover {
        transform: translate(-4px, -4px);
        box-shadow: 12px 12px 0 var(--color-navy);
    }

    .card-image {
        display: block;
        width: 100%;
        height: 240px;
        overflow: hidden;
        border-bottom: 3px solid var(--color-navy);
        background-color: var(--color-bg);
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .blog-card:hover .card-image img {
        transform: scale(1.05);
    }

    .content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: var(--color-text);
        opacity: 0.8;
        margin-bottom: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .dot {
        color: var(--color-red);
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        line-height: 1.3;
    }

    h3 a {
        color: inherit;
        text-decoration: none;
    }

    h3 a:hover {
        color: var(--color-red);
    }

    p {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-text);
        margin-bottom: 1.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    .read-more {
        margin-top: auto;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 800;
        color: var(--color-red);
        font-family: var(--font-accent);
        transition: gap 0.2s ease;
        text-decoration: none;
    }

    .read-more:hover {
        gap: 0.75rem;
    }

    @media (max-width: 480px) {
        .content {
            padding: 1.25rem;
        }

        h3 {
            font-size: 1.35rem;
        }

        .card-image {
            height: 200px;
        }
    }
</style>
